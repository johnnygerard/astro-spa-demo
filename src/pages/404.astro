---
import Navigation from "~/components/Navigation.astro";
import Layout from "~/layouts/Layout.astro";
---

<Layout>
  <Navigation />
  <div class="grid min-h-[80vh] place-items-center">
    <div class="text-center">
      <h1 class="mb-4 text-6xl font-bold text-gray-900">404</h1>
      <p class="mb-6 text-xl text-gray-700">
        Sorry, the page you are looking for does not exist.
      </p>
      <a
        href="/"
        class="inline-block rounded-lg bg-blue-600 px-6 py-3 text-white transition-colors hover:bg-blue-700"
      >
        Back to Home
      </a>
    </div>
  </div>
</Layout>
